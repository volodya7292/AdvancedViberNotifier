<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/testRingtoneB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/gray"
        android:text="Test notification"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/restartB"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/chatName1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="#1 Chat name to notify"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/ring1ShortSelectB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/chatName2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="#2 Chat name to notify"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/ring2ShortSelectB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatName1" />

    <Button
        android:id="@+id/ring1ShortSelectB"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        android:text="S"
        android:textSize="18sp"
        android:tint="@color/green"
        app:icon="@drawable/baseline_library_music_24"
        app:iconGravity="textStart"
        app:iconPadding="2dp"
        app:layout_constraintEnd_toStartOf="@+id/ring1LongSelectB"
        app:layout_constraintTop_toTopOf="@+id/chatName1" />

    <Button
        android:id="@+id/ring1LongSelectB"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:padding="4dp"
        android:text="L"
        android:textSize="18sp"
        android:tint="@color/green"
        app:icon="@drawable/baseline_library_music_24"
        app:iconGravity="textStart"
        app:iconPadding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chatName1" />

    <Button
        android:id="@+id/ring2ShortSelectB"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        android:text="S"
        android:textSize="18sp"
        android:tint="@color/green"
        app:icon="@drawable/baseline_library_music_24"
        app:iconGravity="textStart"
        app:iconPadding="2dp"
        app:layout_constraintEnd_toStartOf="@+id/ring2LongSelectB"
        app:layout_constraintTop_toTopOf="@+id/chatName2" />

    <Button
        android:id="@+id/ring2LongSelectB"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:padding="4dp"
        android:text="L"
        android:textSize="18sp"
        android:tint="@color/green"
        app:icon="@drawable/baseline_library_music_24"
        app:iconGravity="textStart"
        app:iconPadding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chatName2" />


    <Button
        android:id="@+id/ring3ShortSelectB"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        android:text="S"
        android:textSize="18sp"
        android:tint="@color/green"
        app:icon="@drawable/baseline_library_music_24"
        app:iconGravity="textStart"
        app:iconPadding="2dp"
        app:layout_constraintEnd_toStartOf="@+id/ring3LongSelectB"
        app:layout_constraintTop_toTopOf="@+id/chatName3" />

    <Button
        android:id="@+id/ring3LongSelectB"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:padding="4dp"
        android:text="L"
        android:textSize="18sp"
        android:tint="@color/green"
        app:icon="@drawable/baseline_library_music_24"
        app:iconGravity="textStart"
        app:iconPadding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chatName3" />

    <EditText
        android:id="@+id/chatName3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="#3 Chat name to notify"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/ring2ShortSelectB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatName2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Chat names filter (up to 3 chats):"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Service started" />

    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="_version_" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/stopSecondServiceSwitch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.5"
        android:text="Stop NotificationActionService after the action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatName3" />

    <TextView
        android:id="@+id/lastNotificationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="none"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="Last notification:"
        app:layout_constraintBottom_toTopOf="@+id/statusText"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/restartB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/gray"
        android:text="Restart"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/fixPowerOptimizationsB"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/fixPowerOptimizationsB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/gray"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="_power_optimizations_" />

</androidx.constraintlayout.widget.ConstraintLayout>